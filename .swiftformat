# file options

--exclude Pods,Tests/XCTestManifests.swift,Snapshots

# format options

--allman false
--binarygrouping 4,8
--commas always
--comments indent
--decimalgrouping 3,6
--elseposition same-line
--empty void
--exponentcase lowercase
--exponentgrouping disabled
--fractiongrouping disabled
--header ignore
--hexgrouping 4,8
--hexliteralcase uppercase
--ifdef indent
--indent 4
--indentcase false
--importgrouping testable-bottom
--linebreaks lf
--octalgrouping 4,8
--operatorfunc spaced
--patternlet hoist
--self remove
--semicolons inline
--stripunusedargs always
--trimwhitespace always
--wraparguments preserve
--wrapcollections preserve

# rules

--disable andOperator, anyObjectProtocol, blankLinesAroundMark, hoistPatternLet, indent, isEmpty, redundantParens, redundantReturn, redundantSelf, semicolons, spaceAroundParens, spaceInsideGenerics, spaceInsideParens, strongOutlets, strongifiedSelf, todos, trailingClosures, trailingCommas, trailingSpace, unusedArguments, wrapArguments, yodaConditions,  sortedImports
